<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WaiterPhoneApp.Views.MainPage"
             NavigationPage.HasNavigationBar="False">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Orders" BackgroundColor="Gray">
        <!--This is just for testing purposes, will be deleted and replaced by the actual implementation-->
        <StackLayout>
            <Label Text="This is the orders page!"/>
            <Button Text="Select User From Database" Clicked="OnSelectUserClicked"/>
            <Label x:Name="UserLabel"/>
            <Label Text="New nickname:"/>
            <Entry x:Name="NicknameEntry"/>
            <Button Text="Update Nickname" Clicked="OnUpdateNicknameClicked"/>
        </StackLayout>

    </ContentPage>
    <ContentPage Title="Tables">
        <Label Text="This is the tables page!"/>
    </ContentPage>
    <ContentPage Title="Products">
        <Label Text="This is the products page!"/>
    </ContentPage>
</TabbedPage>